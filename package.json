		"test:watch": "pnpm run apps:test:watch & pnpm run functions:test:watch",
		"stop": "concurrently \"pnpm run supabase:stop\" \"pkill -f turbo\" \"pkill -f next\" \"pkill -f astro\"",

		"apps:dev": "turbo run dev",
		"apps:lint": "turbo run lint",
		"apps:lint:fix": "turbo run lint:fix",
